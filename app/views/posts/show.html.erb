<% if current_user == @post.user %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= button_to 'Delete Post', post_path(@post.id), method: :delete, data: { confirm: 'Are you sure?' }%>
<% end %>    

<h1><%= @post.title %></h1>
<p><%= @post.pretty_word_count %></p>

<br>

<p><%= @post.body %></p>

<br>

<p>Written by <%= @post.user.email %></p>

